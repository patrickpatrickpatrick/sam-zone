---js
const eleventyNavigation = {
	key: "Portfolio",
	order: 2
};

const eleventyComputed = {
	title: "Portfolio"
}
---

{% css %}
  .albums-grid {
  	display: grid;
  	grid-template-columns: 1fr;
  	grid-column-gap: 10px;
  	grid-row-gap: 20px;
  }

  .albums-grid__img {
		object-fit: contain;
  	width: 300px;
  	height: 200px;
  }

  .albums-grid__name {
  	display: block;
  	padding-top: 5px;
  	text-align: center;
  	width: 100%;
  }

	@media (min-width: 414px) {
		.albums-grid {
	  	grid-template-columns: 1fr 1fr;
		}
	}  

	@media (min-width: 507px) {
		.albums-grid {
	  	grid-template-columns: 1fr 1fr 1fr;
		}
	}

	a {
		margin: auto;
	}
{% endcss %}

<h1>{{ title }}</h1>

<div class="albums-grid">
	{%- for album in albums %}
		{% set cover_photo %}
			{% if album.cover_photo %}
				{{ photos[album.cover_photo].file }}
			{% else %}
				{{ album.photos[0].file }}
			{% endif %}
		{% endset %}

		<a href="/album/{{ album.name | slugify }}">
			<img class="albums-grid__img" src="{{ environment.mediaURL }}/{{ cover_photo }}" />
			<span class="albums-grid__name">
				{{ album.name }}
			</span>
		</a>
	{%- endfor %}
</div>