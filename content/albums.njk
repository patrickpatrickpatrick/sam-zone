---js
const eleventyNavigation = {
	key: "Works",
	order: 2
};

const eleventyComputed = {
	title: "Works"
}
---

{% css %}
  .albums-grid {
  	display: grid;
  	grid-template-columns: 1fr;
  	grid-column-gap: 10px;
  	grid-row-gap: 20px;
  }

  .albums-grid__img {
		object-fit: cover;
  	width: 300px;
  	height: 200px;
  }

  .albums-grid__name {
  	display: block;
  	padding-top: 5px;
  	text-align: center;
  	width: 100%;
  }

	@media (min-width: 414px) {
	  .albums-grid__img {
			object-fit: cover;
		}
		.albums-grid {
	  	grid-template-columns: 1fr 1fr;
		}
	}  

	@media (min-width: 507px) {
		.albums-grid {
	  	grid-template-columns: 1fr 1fr 1fr;
		}
	}

	@media (min-width: 768px) {
		.albums-grid {
	  	grid-template-columns: 1fr 1fr 1fr 1fr;
		}
	}

	a {
		margin: auto;
	}
{% endcss %}

<h1>Works</h1>

<div class="albums-grid">
	{%- for album in albums %}
		<a href="/album/{{ album.name | slugify }}">
			<img class="albums-grid__img" src="{{ environment.mediaURL }}/{{ album.photos[0].file }}" />
			<span class="albums-grid__name">
				{{ album.name }}
			</span>
		</a>
	{%- endfor %}
</div>